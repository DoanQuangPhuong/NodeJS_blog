<div class="container mt-5">
    <h2 class="text-center mb-4">Khóa học đã xóa</h2>
    <a href="/me/store/courses">Danh sách khóa học</a>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="">
                <tr>
                    <th>STT</th>
                    <th>Tên Khóa Học</th>
                    <th>Level</th>
                    <th>Thời gian tạo</th>
                    <th>Tính năng</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td>{{sum @index 1}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="#">
                            <button class="btn btn-warning btn-sm mr-1 btn-restore" data-id="{{this._id}}">Khôi Phục</button>
                        </a>
                        <a href="#">
                            <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete-course-modal" data-id="{{this._id}}">Xóa vĩnh viễn</button>
                        </a>
                        
                    </td>
                </tr>
                {{else}}
                  <tr class="text-center">
                    <td colspan="5">Thùng rác trống.</td>
                  </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="delete-course-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thông Báo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có muốn xóa khóa học này không ?
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-danger" id="btn-delete-course">Xóa</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
      </div>
    </div>
  </div>
</div>

<form method="post" name="restore-course-form"></form>
<script>
    document.addEventListener('DOMContentLoaded', function(){
        var btnRestore = $('.btn-restore')
        var restoreForm = document.forms['restore-course-form'];
        btnRestore.click(function(e) {
          var id = $(this).data('id');
            restoreForm.action = '/courses/' + id + '/restore?_method=PATCH';
            restoreForm.submit();
        })
    });

</script>
